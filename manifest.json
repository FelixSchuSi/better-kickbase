{
  "manifest_version": 2,
  "name": "better-kickbase",
  "version": "1.0.0",
  "description": "Sei ein effizienterer Manager mit 'better-kickbase'",
  "icons": {
    "16": "favicon/favicon-16.png",
    "32": "favicon/favicon-32.png",
    "48": "favicon/favicon-48.png",
    "64": "favicon/favicon-64.png",
    "96": "favicon/favicon-96.png",
    "128": "favicon/favicon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://play.kickbase.com/*"
      ],
      "js": [
        "scripts/root.widget.ts"
      ],
      "css": [
        "styles/bkb.css",
        "styles/bundesliga.css",
        "styles/ligaboard.css",
        "styles/livematchday.css",
        "styles/tabelle.css",
        "styles/transfermarkt.css",
        "styles/transfermarkt-kader.css",
        "styles/transfermarkt-kaufen.css",
        "styles/transfermarkt-scouting.css",
        "styles/transfermarkt-verkaufen.css",
        "styles/_player-row.css",
        "styles/_frame.css",
        "styles/_vars.css",
        "styles/_fonts.css"
      ]
    }
  ],
  "options_ui": {
    "page": "settings.html",
    "open_in_tab": true
  },
  "browser_action": {
    "default_popup": "settings.html",
    "default_icon": "favicon/favicon-32.png",
    "default_title": "better-kickbase"
  },
  "permissions": [
    "storage",
    "tabs"
  ]
}